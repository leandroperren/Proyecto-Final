<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="72dp"
    android:layout_width="match_parent"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/contenido_cantidad"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/circle_green">

        <TextView
            android:id="@+id/cantidad"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:text="170"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/contenido_cantidad"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/title_fecha_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="26 NOV 2016, 14:30:54"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/title_fecha_hora"
            android:fontFamily="sans-serif"
            android:background="@mipmap/ic_query_builder_black_24dp" />

        <TextView
            android:id="@+id/tiempo_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7h 28' 33''"
            android:layout_below="@+id/title_fecha_hora"
            android:layout_toRightOf="@+id/subtitle"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/material_blue_grey_800" />

    </RelativeLayout>
</RelativeLayout>