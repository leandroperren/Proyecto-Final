<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.fich.pfcii.snoredetection.DetalleCaptura">

    <TextView
        android:id="@+id/detalle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle de la captura"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/detalle_amplitud_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energía promedio"
        android:textSize="18sp"
        android:layout_below="@+id/detalle_title"
        android:paddingBottom="16dp"/>
    <TextView
        android:id="@+id/detalle_amplitud_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.58"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/detalle_title"
        android:layout_toRightOf="@+id/detalle_amplitud_title"
        android:paddingLeft="32dp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/detalle_periodo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Período promedio"
        android:textSize="18sp"
        android:layout_below="@+id/detalle_amplitud_title"
        android:paddingBottom="16dp"/>
    <TextView
        android:id="@+id/detalle_periodo_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.86 s"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/detalle_amplitud_title"
        android:layout_toRightOf="@+id/detalle_periodo_title"
        android:paddingLeft="32dp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>
